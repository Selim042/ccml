    <text>First line</text><br/>
    <link dest="page2.ccml">Page 2!</link><br/>
    <text id="toEdit">YOU CAN'T SEE ME</text>
    <script>
      local txt = "Hello world!  This is a test!  Banana for scale!  "
      local element = getElementById("toEdit",dom)[1]
      local width = 15
      while true do
        for i=-width,#txt do
          element.value = string.sub(txt,i,i+width)
          rerender()
          sleep(0.25)
        end
      end
    </script><br/>
